{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "outFile": "dist/index.d.ts",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
